<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_users_form_inherit_user_type" model="ir.ui.view">
        <field name="name">res.users.form.inherit.user_type</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <!-- Add the user_type field after the user's name field -->
        <xpath expr="//div[@class='oe_title']/group/field[@name='partner_id']" position="after">
            <field name="user_type"/>
        </xpath>
        </field>
    </record>
</odoo>
